// Returns studentWorkProject Mean SO scores

dcia.courseinstances.aggregate([
  {
    '$match': {
      'semester': new ObjectId('5fc2e25ba981b28decd9c4a5')
    }
  }, {
    '$unwind': {
      'path': '$student'
    }
  }, {
    '$unwind': {
      'path': '$studentWorkProject'
    }
  }, {
    '$lookup': {
      'from': 'assessments', 
      'let': {
        'id': '$student', 
        'swp': '$studentWorkProject'
      }, 
      'pipeline': [
        {
          '$match': {
            '$expr': {
              '$and': [
                {
                  '$eq': [
                    '$student', '$$id'
                  ]
                }, {
                  '$eq': [
                    '$studentWorkProject', '$$swp'
                  ]
                }
              ]
            }
          }
        }, {
          '$project': {
            '_id': 0, 
            'score': 1, 
            'studentOutcome': 1
          }
        }
      ], 
      'as': 'soAndScore'
    }
  }, {
    '$unwind': {
      'path': '$soAndScore'
    }
  }, {
    '$unwind': {
      'path': '$soAndScore.studentOutcome'
    }
  }, {
    '$lookup': {
      'from': 'studentoutcomes', 
      'let': {
        'so': '$soAndScore.studentOutcome'
      }, 
      'pipeline': [
        {
          '$match': {
            '$expr': {
              '$eq': [
                '$_id', '$$so'
              ]
            }
          }
        }, {
          '$project': {
            '_id': 0, 
            'studentOutcomeNumber': 1
          }
        }
      ], 
      'as': 'so'
    }
  }, {
    '$match': {
      'studentWorkProject': new ObjectId('5fc2e25ba981b28decd9c4b4')   // studentWorkProject ObjectId
    }
  }, {
    '$unwind': {
      'path': '$so'
    }
  }, {
    '$group': {
      '_id': '$so.studentOutcomeNumber',                                // _id is the SO number
      'averageScore': {
        '$avg': '$soAndScore.score'
      }
    }
  }
])